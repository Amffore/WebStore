            <nav class="navbar navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand" asp-action="Index" asp-controller="Home">PhoneStore</a>
                </div>
            </nav>
        </header>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-2">
                        <ul class="nav flex-column">
                            <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Product">Смартфоны</a></li>
                        </ul>
                    </div>
                    <div class="col-10">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <div class="container">
                
            </div>
        </footer>
    </body>
</html>